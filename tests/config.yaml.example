# Hetzner Cloud Failover Configuration

# Hetzner Cloud API Token
# Get from: https://console.hetzner.cloud/ -> Project -> Security -> API Tokens
hetzner_api_token: "YOUR_API_TOKEN_HERE"

# Floating IPs Configuration
# Filter floating IPs by labels - only IPs matching ALL labels will be managed
floating_ip_labels:
  role: vrrp
  cluster: production

# Alias IP Configuration
# IPv4 or IPv6 addresses to assign to the server
alias_ips:
  - "10.0.0.100/32"
  - "10.0.0.101/32"

# Optional: Log file path
log_file: "/var/log/hetzner-vrrp-failover.log"

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
log_level: "INFO"
