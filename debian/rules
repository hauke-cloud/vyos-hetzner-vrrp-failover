#!/usr/bin/make -f

export PYBUILD_NAME=hetzner-vrrp-failover
export DH_VERBOSE=1
# Use Python 3.11 to match VyOS target environment
export PYBUILD_SYSTEM=distutils
export PYBUILD_VERSIONS=3.11

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_clean:
	dh_auto_clean
	rm -rf build/
	rm -rf *.egg-info/

override_dh_auto_test:
	# Skip tests during package build
